<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.android.explainintent.MainActivity">

    <TextView
            android:text="Explicit Intent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" android:id="@+id/textView2" android:layout_below="@+id/textView"
            android:textSize="24sp"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="142dp" android:id="@+id/button"
            android:onClick="doSomething" android:layout_below="@+id/textView2" android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/textView2" android:layout_centerHorizontal="true" android:layout_marginTop="42dp"
            android:id="@+id/edit1" android:hint="Enter your data"/>

</RelativeLayout>
