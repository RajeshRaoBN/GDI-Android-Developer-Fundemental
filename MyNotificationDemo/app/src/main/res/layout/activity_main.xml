<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.android.mynotificationdemo.MainActivity">

    <TextView
            android:text="Notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:layout_marginTop="34dp" android:id="@+id/textView"
            android:textSize="30sp"/>
    <Button
            android:text="Open Notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" android:layout_marginTop="35dp" android:id="@+id/button"
            android:onClick="doSomething"/>
</RelativeLayout>
