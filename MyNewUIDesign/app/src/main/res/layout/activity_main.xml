<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.android.mynewuidesign.MainActivity" android:padding="10dp">

    <TextView
            android:text="Drawables, Styles and Themes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:id="@+id/textView" android:textSize="24sp"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp" android:src="@drawable/dog"
            android:layout_marginTop="32dp" android:id="@+id/imageButton"
            android:onClick="doImage" android:layout_below="@+id/textView" android:layout_centerHorizontal="true"/>
    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="100dp" android:layout_below="@+id/imageButton"
            android:layout_centerHorizontal="true" android:layout_marginTop="69dp" android:id="@+id/button"
            android:background="@drawable/myowngradient"/>
    <Button
            android:text="Button"
            style="@style/button_design"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true" android:layout_marginTop="26dp" android:id="@+id/button2"/>
</RelativeLayout>
